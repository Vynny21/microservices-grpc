{
  "compilerOptions": {
    "lib": ["es6"],
    "module": "commonjs",
    "target": "es2019",
    "sourceMap": true,    
    "allowJs": true,                
    "removeComments": true,               
    "esModuleInterop": true,                 
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "typeRoots" : ["./node_modules/@types", "./src/@types"],
    "paths": {
      "@services/*": ["packages/*/src"],
      "@protos": ["packages/protos/generated"]
    }
  },
  "exclude": ["node_modules"]
}